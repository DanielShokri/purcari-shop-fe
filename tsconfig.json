{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["packages/shared-*/src"],
      "@convex/api": ["convex/_generated/api"],
      "@convex/dataModel": ["convex/_generated/dataModel"],
      "@/components/ui/color-mode": ["apps/admin/components/ui/color-mode.tsx"],
      "@/components/notifications": ["apps/admin/components/notifications/index.ts"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "noImplicitAny": false,
    "strict": false,
    "suppressImplicitAnyIndexErrors": false,
    "noImplicitThis": false,
    "noImplicitReturns": false
  }
}



