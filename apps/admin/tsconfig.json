{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "types": ["node"],
    "typeRoots": ["../../node_modules/@types", "../../types"],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@shared/api/*": [
        "../../packages/shared-api/src/*"
      ],
      "@shared/constants/*": [
        "../../packages/shared-constants/src/*"
      ],
      "@shared/services/*": [
        "../../packages/shared-services/src/*"
      ],
      "@shared/types/*": [
        "../../packages/shared-types/src/*"
      ],
      "@convex/*": [
        "../../convex/*"
      ],
      "@convex/api": [
        "../../convex/_generated/api"
      ],
      "@convex/dataModel": [
        "../../convex/_generated/dataModel"
      ]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
